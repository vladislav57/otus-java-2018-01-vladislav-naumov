<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <context:component-scan  base-package="controller" />
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/jsp/" />
        <property name="suffix" value=".jsp" />
    </bean>

    <bean id="dataSource" class="org.apache.tomcat.dbcp.dbcp2.BasicDataSource">
        <property name="driverClassName" value="org.apache.derby.jdbc.EmbeddedDriver"/>
        <property name="url" value="jdbc:derby:testDB2;create=true"/>
        <property name="username" value="admin"/>
        <property name="password" value=""/>
    </bean>

    <bean id="Timer" class="java.util.Timer"></bean>

    <bean id="dbServiceAddress" class="homework15.messageSystem.Address"></bean>
    <bean id="cachedDBServiceAddress" class="homework15.messageSystem.Address"></bean>
    <bean id="dbService" class="homework10.database.DBServiceImpl">
        <constructor-arg ref="dbServiceAddress"/>
        <constructor-arg ref="msContext"/>
        <constructor-arg ref="sessionFactory"/>
    </bean>
    <bean id="cacheEngine" class="homework11.CacheEngineImpl"></bean>
    <bean id="cachedDBService" class="homework11.CachedDBServiceImpl" init-method="init">
        <constructor-arg ref="cachedDBServiceAddress"/>
        <constructor-arg ref="msContext"/>
        <constructor-arg ref="cacheEngine"/>
        <constructor-arg ref="dbService"/>
    </bean>

    <bean id="frontServiceAddress" class="homework15.messageSystem.Address"></bean>
    <bean id="frontendService" class="homework15.front.FrontendServiceImpl" init-method="init">
        <constructor-arg ref="msContext"/>
        <constructor-arg ref="frontServiceAddress"/>
    </bean>

    <bean id="messageSystem" class="homework15.messageSystem.MessageSystem"
    init-method="start" destroy-method="dispose"></bean>
    <bean id="msContext" class="homework15.app.MessageSystemContext">
        <constructor-arg ref="messageSystem"/>
        <constructor-arg ref="frontServiceAddress"/>
        <constructor-arg ref="cachedDBServiceAddress"/>
    </bean>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">

        <property name="dataSource" ref="dataSource"/>
        <property name="packagesToScan">
            <list>
                <value>controller</value>
                <value>homework10</value>
                <value>homework11</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.hbm2ddl.auto">create-drop</prop>
                <prop key="hibernate.show_sql">false</prop>
                <prop key="hibernate.dialect">org.hibernate.dialect.DerbyTenSevenDialect</prop>
                <prop key="connection.pool_size">5</prop>
            </props>
        </property>
    </bean>

    <bean id="txManager"
          class="org.springframework.orm.hibernate5.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

</beans>
